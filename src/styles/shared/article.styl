.article-wrapper
  max-width 48*x
  margin 0 auto
  padding 0 x 3*x

  .article-date
    color light
    margin-bottom -2*x
    margin-top 3*x

  h1, h2, h3, h4, h5, h6
    line-height 1.25
    margin-top 2*x
    position relative

    i.material-icons
      color lighten(light,50%)
      position absolute
      top 0.25*x
      left -1.5em
      font-size 1em
      cursor copy
      &:hover
        color dim
      &:active
        color link
      &.active:after
        display block
        position absolute
        top 3em
        right 0

        background #fff
        padding 0.125*x 0.25*x

        content 'Copied!'
        font-family sans
        font-size 0.75*x
        color dim

  h1
    font-size 2.5*x
    font-weight bold
    margin-bottom 2*x
    margin-top 2*x

  h2
    font-size 2*x
    border-bottom 1px solid bc
    padding 0.75*x 0
    margin-bottom 1.75*x
    i.material-icons
      margin 0.75*x 0

  h3
    font-size 1.5*x
    padding 0.5*x 0
    border-bottom 1px solid bc
    margin-bottom x
    i.material-icons
      margin 0.5*x 0
    
  h4
    font-size 1.25*x
    margin-bottom 0.75*x
    &.visible
      background #f00

  h5
    font-size 1.125*x
    font-weight bold
    margin-bottom 0.5*x
  h6
    font-size x
    font-weight bold
    margin-bottom 0.25*x

  p, ol, ul, blockquote, img, pre
    margin-bottom 1.5*x

  ul ul, ul ol, ol ul, ol ol
    margin-bottom 0

  ol, ul
    padding-left 1.5*x

  ol li
    list-style decimal
    list-style-position inside

  ul
    list-style square
    list-style-position inside

  strong
    font-weight bold

  em
    font-style italic

  pre
    display block
    background #fff
    border 1px solid bc
    font-family monospace
    padding 0.75*x x
    overflow-x scroll
    font-size 0.8*x

  p, li
    overflow-x hidden
    text-overflow ellipsis

  img
    max-width 100%

@media screen and (min-width: 720px)
  .article-wrapper
    padding-left 4*x
    padding-right 4*x

@media screen and (min-width: 960px)
  .toc-padding.toc-visible
    margin-left 15*x + x

@media screen and (min-width: 1200px)
  .toc-padding.toc-visible
    margin-left 20*x + x

  .article-wrapper
    padding-top 3*x
    padding-left 2*x
    padding-right 2*x

@media screen and (min-width: 1320px)
  .article-wrapper
    padding-top 3*x
    padding-left 0
    padding-right 0

@media screen and (min-width: 1800px)
  .toc-padding.toc-visible
    margin-left 25*x + x
