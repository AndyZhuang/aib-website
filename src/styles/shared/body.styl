global-reset()
reset-html5()

*
  box-sizing border-box

footer, header, nav, menu, article
  box-sizing border-box

body
  df()
  display flex
  flex-flow column
  background mbg
  min-height 100vh
  -webkit-text-size-adjust none

  font-size 0.875*x
  font-family sans
  line-height 1.5
  font-weight 300

@media screen and (min-width: 360px)
  body
    font-size 0.9375*x

@media screen and (min-width: 414px)
  body
    font-size x

#site-content
  flex 1
  min-height 80vh

.desktop-only
.mobile-only
  display none !important

@media screen and (max-width: 959px)
  .mobile-only
    display block !important

@media screen and (min-width: 960px)
  .desktop-only
    display block !important
