@media screen and (min-width: 960px)
  .split-page
    display flex
    flex-flow row nowrap
    align-items stretch
    min-height 70vh

  .page-header
    flex 0 0 33.3vw

  .page-content
    flex 0 0 66.7vw
    margin-top 3*x
    .section-container
      padding 3*x !important
      .section-content
        padding 0

@media screen and (min-width: 1200px)
  .page-header
    flex 0 0 25vw

  .page-content
    flex 0 0 75vw
