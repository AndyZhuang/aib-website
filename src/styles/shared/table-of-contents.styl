@media screen and (min-width: 1280px)
  .toc-wrapper
    position fixed
    top 3*x
    left 0
    bottom 0

    width 14*x
    max-height 100vh

    padding 2*x 0 0

    overflow hidden
    border-right 1px solid bc

    h2
      position fixed
      top 3*x
      left 0
      right 0
      margin 0

      a
        font-size 0.7*x
        line-height 2*x
        color #fff

        display block
        padding 0 x

        background alpha(txt,85%)
        border-bottom 1px solid bc

        &:hover
          background link
          color #fff

    > ul
      list-style none
      font-size 0.7*x
      padding 0

      > li
        border-bottom 1px solid bc
        > a
          display block
          font-weight normal
          padding 0.5*x x
          font-weight bold

      li
        a
          color txt
          display block
          padding-left 0.5*x
          &:hover
            background #fff

      ul
        margin 0 0 0.5*x
        padding-left 1.5*x

@media screen and (min-width: 1366px)
  .toc-wrapper
    width 16*x
    h2 a, ul
      font-size 0.775*x
@media screen and (min-width: 1440px)
  .toc-wrapper
    width 18*x
    h2 a, ul
      font-size 0.85*x
@media screen and (min-width: 1650px)
  .toc-wrapper
    width 20*x
    h2 a, ul
      font-size 0.90*x
@media screen and (min-width: 1920px)
  .toc-wrapper
    width 24*x
    h2 a, ul
      font-size x
