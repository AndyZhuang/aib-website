.article-body
  line-height 1.58
  max-width 48em
  margin-left auto
  margin-right auto
  padding 0 1em

  hr
    border none
    border-top 0.25rem solid bc
    background transparent
    height 0
    margin 0
    padding 0
    margin 1.5rem 0
  a
    &:hover
      text-decoration underline

  strong
    font-weight bold

  em
    font-style italic

  code
    font-family Consolas, 'Deja Vu Sans Mono', 'Andale Sans Mono', monospace
    background #f0f0f0
    margin 0 0 1.5*x

  pre
    background #f0f0f0
    overflow-x scroll
    margin-bottom 1.5*x
    margin-left -1*x
    margin-right -1*x
    padding 0.375*x 0.5*x
    line-height 1.25
    code
      margin-bottom 0
      font-size 0.75rem

  p, ul, ol, table, blockquote, img, .btn
    margin-bottom 1.38em

  .youtube
    display block
    margin-bottom 1.5*x

  p
    code
      &:before, &:after
        letter-spacing -0.375em
        content "\00a0"
   img
      margin 0

  .left, .right
    margin-bottom 2.5em !important

  .left
    float left !important
    padding-right 2.5em !important
  .right
    float right !important
    padding-left 2.5em !important

  img
    max-width 100%

  h1, h2, h3, h4, h5, h6
    font-family sans
    color txt
    font-weight 400
    position relative

    i.fa
      position absolute
      top 0.333em
      left -1.5em
      font-size 1em
      cursor copy

      color subtle

      &:hover
        color dim
      &:active
        color link
      &.active:after
        display block
        position absolute
        top 3em
        right 0

        background #fff
        padding 0.125rem 0.25rem

        content 'Copied!'
        font-family sans
        font-size 0.75rem
        color dim

  h1
    font-size 2rem
    font-weight 500
    padding-top 1rem
    margin 2rem 0 1rem

  h1 + h2
    margin-top 0

  h2
    font-size 1.5rem
    margin 2*x 0 x

  h2:first-child
    margin-top 0

  h3
    font-size 1.25rem
    margin x 0

  h4
    font-size 1.125rem
    font-style italic
    margin x 0

  ul, ol
    padding-left 1.5em

  ul li
    list-style square
    margin-bottom 0.25em

  ol li
    list-style decimal

  table
    border 1px solid #ddd
    border-collapse collapse
    width 100%

    th
      font-weight 600
      background hsl(mhue,msat,95%)
      color mcolor

    td, th
      border 1px solid bc
      padding 0.25em .5em

  blockquote
    border 1px solid lighten(mcolor,85%)
    padding 0.75*x x
    background lighten(mcolor,95%)
    position relative

    color mcolor
  
    p, ul, ol
      margin-bottom 0.75*x

    p:last-child, ul:last-child, ol:last-child
      margin-bottom 0

  blockquote + h2
    margin-top 1.5*x

@media screen and (min-width: 560px)
  .article-body
    pre
      font-size x
      margin-left 0
      margin-right 0

@media screen and (min-width: 720px)
  .article-body
    padding 0 2rem
    h1
      padding-top 2rem
      font-weight 600

    iframe.iframe-video
      max-width 48em
      max-height 27em

    p, ul, ol, blockquote
      /* These are technically the same, but use both */
      overflow-wrap break-word
      word-wrap break-word
      text-align justify

      /* Adds a hyphen where the word breaks, if supported (No Blink) */
      hyphens auto

@media screen and (min-width: 960px)
  .toc-padding.toc-visible
    margin-right 15rem + 1rem

@media screen and (min-width: 1200px)
  .toc-padding.toc-visible
    margin-right 20rem + 1rem
  .article-body
    padding 0

@media screen and (min-width: 1800px)
  .toc-padding.toc-visible
    margin-right 25rem + 1rem
